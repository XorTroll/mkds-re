ifeq ($(strip $(DEVKITPRO)),)
$(error "Please set DEVKITPRO in your environment. export DEVKITPRO=<path to>devkitPro)
endif

export TOPDIR	:=	$(CURDIR)

.PHONY: build clean all docs

all: build

#-------------------------------------------------------------------------------
build: lib
#-------------------------------------------------------------------------------
	$(MAKE) -C arm9 || { exit 1;}
	$(MAKE) -C arm7 || { exit 1;}

#-------------------------------------------------------------------------------
lib:
#-------------------------------------------------------------------------------
	mkdir lib

#-------------------------------------------------------------------------------
clean:
#-------------------------------------------------------------------------------
	@$(MAKE) -C arm9 clean
	@$(MAKE) -C arm7 clean

#-------------------------------------------------------------------------------

#---------------------------------------------------------------------------------
docs:
#---------------------------------------------------------------------------------
	doxygen Doxyfile

#---------------------------------------------------------------------------------
